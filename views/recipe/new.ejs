<body class="create-bg" >

  <%- include('../partials/nav.ejs') %>
  <div class="card" style="width: 500px">
    <div class="card-body" >
      <h4 class="card-title">Create a new Recipe</h4>
      <hr color="gray" />

      <form
        class="auth-card-container"
        method="POST"
        action="/recipe/new"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="formGroupExampleInput" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="formGroupExampleInput"
            name="title"
          />
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label"
            >Ingredients</label
          >
          <input
            type="text"
            class="form-control"
            id="formGroupExampleInput2"
            name="ingredients"
          />
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label"
            >Cooking Time</label
          >
          <input
            type="number"
            class="form-control"
            id="formGroupExampleInput2"
            name="cookingTime"
          />
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label"
            >Serving Size</label
          >
          <input
            type="number"
            class="form-control"
            id="formGroupExampleInput2"
            name="servingSize"
          />
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label"
            >Instructions</label
          >
          <textarea
            type="text"
            class="form-control"
            id="formGroupExampleInput2"
            name="instructions"
            cols="40"
            rows="5"
          ></textarea>
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label"
            >Video Link</label
          >
          <input
            type="url"
            class="form-control"
            id="formGroupExampleInput2"
            name="video"
            pattern="https://.*"
          />
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Image</label>
          <input
            type="file"
            class="form-control-file"
            id="formGroupExampleInput2"
            name="recipe-image"
            accept="image/png, image/jpg"
          />
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Origin</label>
          <input
            type="text"
            class="form-control"
            id="formGroupExampleInput2"
            name="origin"
          />
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label"
            >Difficulty</label
          >
          <select class="form-control" id="recipe-difficulty" name="difficulty">
            <option value="easy" selected>Easy</option>
            <option value="medium">Medium</option>
            <option value="hard">Hard</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label"
            >Category</label
          >
          <select class="form-control" id="recipe-category" name="category">
            <option value="vegan" selected>Vegan</option>
            <option value="vegetarian">Vegetarian</option>
            <option value="maindish">Main-dish</option>
            <option value="soup" selected>Soup</option>
            <option value="salad">Salad</option>
            <option value="dessert">Dessert</option>
            <option value="breakfast" selected>Breakfast</option>
            <option value="appetizers">Appetizers</option>
            <option value="drinks">Drinks</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label"
            >Keywords</label
          >
          <input
            type="text"
            class="form-control"
            id="formGroupExampleInput2"
            name="keywords"
          />
        </div>

        <button type="submit" class="btn btn-light">Create your recipe</button>
      </form>
    </div>
  </div>

</body>
