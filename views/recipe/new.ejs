<div class="card">
  <div class="card-body">
    <h4 class="card-title">Sign Up</h4>
    <hr color="gray" />

    <form class="auth-card-container"
      method="POST"
      action="/auth/signup"
    >
      <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Username</label>
        <input type="text" class="form-control" id="formGroupExampleInput"
        name="username" <% if (typeof errorMessage !=='undefined' ) { %>
        value="<%= userData.username %>" <% } %> />
      </div>

      <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Email address</label>
        <input type="text" class="form-control" id="formGroupExampleInput2"
        name="email" required <% if (typeof errorMessage !=='undefined' ) { %>
        value="<%= userData.email %>" <% } %> />
      </div>

      <div class="mb-3">
        <label for="formGroupExampleInput3" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="formGroupExampleInput3" required />
      <p style="font-size: 12px; padding-top: 10px">Minimum of 6 characters</p>
      </div>


      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          id="flexCheckDefault"
        />
        <label class="form-check-label" for="flexCheckDefault">
          I agree to the Equality, Inclusion and Diversity Policy.
        </label>
      </div>

      <button type="submit" class="btn btn-light">Create an account</button>
      <% if (typeof errorMessage !=='undefined' ) { %>
          <p class="alert alert-danger" role="alert"><%= errorMessage %></p>
          <% } %>
    </form>
  </div>
</div>






<div class="container d-flex flex-column align-items-center">
  <form class="w-50 d-flex flex-column" method="POST" action="/recipe/new" enctype="multipart/form-data">
    <h2 class="main-header">Create a new Recipe</h2>
    <label>
      Title:
      <input type="text" name="title" />
    </label>
    <br />
    <label>
      Ingredients:
      <input type="text" name="ingredients" />
    </label>
    <br />
    <label>
      Cooking Time:
      <input type="number" name="cookingTime" />
    </label>
    <br />
    <label>
      Serving Size:
      <input type="number" name="servingSize" />
    </label>
    <br />
    <label>
      Instructions:
      <textarea type="text" name="instructions" cols="40" rows="5"></textarea>
    </label>
    <br />
 
    <label>
      Video-Link:
      <input type="text" name="video" />
    </label>
    <br />
    <label>
      Image: 
      <input type="file" name="recipe-image" class="form-control-file" accept="image/png, image/jpg"/>
    </label>
    <br />
    <label>
      Origin:
      <input type="text" name="origin" />
    </label>
    <br />
    <label>
      Difficulty:
      <select class="form-control" id="recipe-difficulty" name="difficulty">
        <option value="easy" selected>Easy</option>
        <option value="medium">Medium</option>
        <option value="hard">Hard</option>
      </select>
      <br />
      <label>
        Category:
        <select class="form-control" id="recipe-category" name="category">
          <option value="vegan" selected>Vegan</option>
          <option value="vegetarian">Vegetarian</option>
          <option value="maindish">Main-dish</option>
          <option value="soup" selected>Soup</option>
          <option value="salad">Salad</option>
          <option value="dessert">Dessert</option>
          <option value="breakfast" selected>Breakfast</option>
          <option value="appetizers">Appetizers</option>
          <option value="drinks">Drinks</option>
        </select>
      </label>
      <br />
      <br />
      <label>
        Keywords:
        <input type="text" name="keywords" />
      </label>
      <br />
      <br />
      <button type="submit">Create new recipe</button>
      <br />
  </form>
</div>
