<h1>All recipes</h1>
<hr>
<div class="row">
  <% if (allRecipes?.length> 0) { %>
    <% allRecipes.forEach(({ imageUrl, title, description, id })=> { %>
      <div class="col-md-4 mb-5">
        <div class="card" style="width: 18rem;">
          <img src="<%= imageUrl %>" class="card-img-top" alt="<%= recipe.title %>">
          <div class="card-body">
            <h5 class="card-title">
              <%= recipe.title %>
            </h5>
            <p class="card-text">
              <%= recipe.description %>
            </p>
            <%#!-- <a href="/recipe/<%= id %>/edit" class="btn btn-primary">Edit</a> --%>
          </div>
        </div>
      </div>
      <% }) %>
        <% } else { %>
          <p>There are no recipes yet!</p>
          <% } %>
            <hr />
</div>