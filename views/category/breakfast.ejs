<h1>All Breakfast recipes</h1>
<hr>
<div class="row">
  <% if (catRecipes?.length> 0) { %>
    <% catRecipes.forEach(recipe => { %>
      <div class="col-md-4 mb-5">
        <div class="card" style="width: 18rem;">
          <img src="<%= recipe.imageURL %>" class="card-img-top" alt="<%= recipe.title %>">
          <div class="card-body">
            <h5 class="card-title">
              <a class="recipe-title" href="/recipe/<%- recipe._id %> ">
                <%= recipe.title %>
            </a>
            </h5>
           <p class="card-text">
            <%= recipe.difficulty %>
            </p>
            <a href="/recipe/<%= recipe._id %>/update" class="btn btn-primary">Edit</a>
            <button type="submit">Add to Favourites</button>
          </div>
        </div>
      </div>
      <% }) %>
        <% } else { %>
          <p>You have no recipes yet!</p>
          <% } %>
            <hr />
</div>