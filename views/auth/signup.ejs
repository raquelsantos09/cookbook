<body class="signup-bg">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Sign Up</h4>
      <hr color="gray" />

      <form class="auth-card-container"
        method="POST"
        action="/auth/signup"
      >
        <div class="mb-3">
          <label for="formGroupExampleInput" class="form-label">Username</label>
          <input type="text" class="form-control" id="formGroupExampleInput"
          name="username" <% if (typeof errorMessage !=='undefined' ) { %>
          value="<%= userData.username %>" <% } %> />
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Email address</label>
          <input type="text" class="form-control" id="formGroupExampleInput2"
          name="email" required <% if (typeof errorMessage !=='undefined' ) { %>
          value="<%= userData.email %>" <% } %> />
        </div>

        <div class="mb-3">
          <label for="formGroupExampleInput3" class="form-label">Password</label>
          <input type="password" name="password" class="form-control" id="formGroupExampleInput3" required />
        <p style="font-size: 12px; padding-top: 10px">Minimum of 6 characters</p>
        </div>


        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            id="flexCheckDefault"
          />
          <label class="form-check-label" for="flexCheckDefault">
            I agree to the Equality, Inclusion and Diversity Policy.
          </label>
        </div>

        <button type="submit" class="btn btn-light">Create an account</button>
        <% if (typeof errorMessage !=='undefined' ) { %>
            <p class="alert alert-danger" role="alert"><%= errorMessage %></p>
            <% } %>
      </form>
    </div>
  </div>
</body>


